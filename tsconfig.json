{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true, // 设置import方式
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
  },
  "exclude": [
    "**/node_modules",
    "**/examples",
    "**/dist",
    "**/fixtures",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/templates"
  ]
}